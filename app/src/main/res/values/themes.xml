<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->

    <style name="Theme.DisciteOmnesLearningPlatform" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/olive_green</item>
        <item name="colorPrimaryVariant">@color/sage_green</item>
        <item name="colorOnPrimary">@color/sage_green</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/olive_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Material 3 container colors (optional if you're using M3 components) -->
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <item name="containerBgTint">@color/pastel_green</item>
        <item name="buttonColor">@color/olive_green</item>

        <item name="alert_options_color">@color/black</item>

    </style>
    <!--
    FAB uses colorSecondaryContainer
    Login page uses Primary
    Nav tab uses Primary
-->
</resources>